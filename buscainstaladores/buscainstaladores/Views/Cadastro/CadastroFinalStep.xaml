<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="buscainstaladores.Views.Cadastro.CadastroFinalStep">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="background.png" Aspect="AspectFill" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" /> 
            <StackLayout VerticalOptions="CenterAndExpand" Padding="30" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" >                 
                               
                <Label Text="Informe um e-mail e senha"></Label>
                <Entry x:Name="emailEntry" Placeholder="Insira seu e-mail" Keyboard="Email"></Entry>
                <Entry x:Name="senhaEntry" Placeholder="Insira sua senha" IsPassword="true"></Entry>       
                <Label x:Name="labelMensagem" Text="" HorizontalOptions="Center" FontSize="14" TextColor="Gray" Margin="0,10,0,0" />
                <Button Text="Finalizar" Clicked="ContinuarClicked" BackgroundColor="#2e3842" TextColor="White"/>
            </StackLayout>     
        </AbsoluteLayout> 
    </ContentPage.Content>
</ContentPage>
